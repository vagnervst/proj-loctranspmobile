<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cityshare.app.DetalhesPedidoActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ViewFlipper
            android:id="@+id/flipper_detalhes_pedido"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/content_detalhes_pedido_detalhes" />
            <include layout="@layout/content_detalhes_pedido_acoes" />
            <include layout="@layout/content_detalhes_pedido_historico" />

        </ViewFlipper>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation_detalhes_pedido" />

</LinearLayout>